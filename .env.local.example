# ========================================
# Local Development Environment (Mac)
# ========================================
# Copy this file to .env.local and fill in your credentials
# This is used by Makefile auto-detection (Darwin OS)
# ========================================

# ========================================
# KIS Broker API
# ========================================
# IMPORTANT: Use DUMMY credentials for local testing
# Socket connections will NOT be initiated with invalid keys
KIS_APP_KEY=YOUR_KIS_APP_KEY_HERE
KIS_APP_SECRET=YOUR_KIS_APP_SECRET_HERE
KIS_BASE_URL=https://openapi.koreainvestment.com:9443
KIS_WS_URL=ws://ops.koreainvestment.com:21000

# ========================================
# Kiwoom Broker API
# ========================================
# IMPORTANT: Use DUMMY credentials for local testing
KIWOOM_APP_KEY=YOUR_KIWOOM_APP_KEY_HERE
KIWOOM_APP_SECRET=YOUR_KIWOOM_APP_SECRET_HERE
KIWOOM_API_URL=https://api.kiwoom.com
KIWOOM_TOKEN_URL=https://api.kiwoom.com
KIWOOM_MOCK=True
KIWOOM_BACKUP_MODE=False

# ========================================
# Database (TimescaleDB)
# ========================================
# Local uses 'localhost' for host-side access
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=stock_local

# ========================================
# DuckDB (Local Development)
# ========================================
TICKS_DB=data/dev_market_data.duckdb
NEWS_DB=data/dev_market_data.duckdb

# ========================================
# Redis (Local)
# ========================================
# Use 'localhost' for host-side access
REDIS_URL=redis://localhost:6379/0

# ========================================
# Application Settings
# ========================================
APP_ENV=development

# Symbol configuration file
CONFIG_FILE=configs/kr_symbols.yaml

# ========================================
# API Authentication & Security
# ========================================
API_AUTH_SECRET=local-dev-secret-key
ALLOWED_ORIGINS=*

# ========================================
# Frontend (Vite) Configuration
# ========================================
VITE_API_KEY=local-dev-secret-key
VITE_API_URL=http://localhost:8000
VITE_API_PORT=8000
VITE_ENV_TYPE=local
