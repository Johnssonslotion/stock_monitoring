# ========================================
# Stock Monitoring System - Environment Template
# ========================================
# Copy this file to:
#   - .env.local  (Mac development)
#   - .env.prod   (Oracle Cloud production)
#   - .env        (Custom environment)
#
# Fill in the actual values for your environment.
# DO NOT commit filled values to Git!
# ========================================

# ========================================
# KIS Broker API
# ========================================
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_BASE_URL=https://openapi.koreainvestment.com:9443
KIS_WS_URL=ws://ops.koreainvestment.com:21000

# ========================================
# Kiwoom Broker API (OpenAPI RE)
# ========================================
KIWOOM_APP_KEY=
KIWOOM_APP_SECRET=
KIWOOM_API_URL=https://api.kiwoom.com
KIWOOM_TOKEN_URL=https://api.kiwoom.com
KIWOOM_MOCK=False
KIWOOM_BACKUP_MODE=True

# ========================================
# Database (TimescaleDB)
# ========================================
# Production: stock-timescale (Docker network)
# Local: localhost (Host access)
DB_HOST=stock-timescale
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=stockval

# ========================================
# DuckDB (Legacy/Archive Storage)
# ========================================
# Use environment-specific prefixes:
#   - Local: data/dev_market_data.duckdb
#   - Prod:  data/market_data.duckdb
TICKS_DB=data/market_data.duckdb
NEWS_DB=data/market_data.duckdb

# ========================================
# Redis (Pub/Sub & Cache)
# ========================================
REDIS_URL=redis://stock-redis:6379/0

# ========================================
# Application Settings
# ========================================
# Options: development, production, test
APP_ENV=production

# Symbol configuration file
CONFIG_FILE=configs/kr_symbols.yaml

# ========================================
# API Authentication & Security
# ========================================
# Backend API authentication key (shared with frontend)
API_AUTH_SECRET=super-secret-key

# CORS allowed origins (use * for dev, specific domains for prod)
ALLOWED_ORIGINS=*

# ========================================
# Frontend (Vite) Configuration
# ========================================
# These must match backend settings
VITE_API_KEY=super-secret-key
VITE_API_URL=http://localhost:8000
VITE_API_PORT=8000
VITE_ENV_TYPE=production
